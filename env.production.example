# Application Configuration
NODE_ENV=production
PORT=3000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=<강력한_비밀번호_설정_필수>
REDIS_DB=0

# Application Ports
COLLECTOR_PORT=3001
TREND_PORT=3002

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_ARTICLES=news-articles
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SECURITY_ENABLED=false
KIBANA_PORT=5601
KIBANA_PUBLIC_BASE_URL=

# Security Configuration
# CORS: 허용할 Origin 목록 (쉼표로 구분, * = 모든 Origin 허용)
# 프로덕션에서는 특정 도메인만 허용하는 것을 권장
ALLOWED_ORIGINS=*
# Admin API Key (설정 시 X-API-Key 헤더 필수)
ADMIN_API_KEY=<강력한_API_키_설정_권장>
# Admin IP 화이트리스트 (쉼표로 구분)
# 예: ALLOWED_ADMIN_IPS=123.456.789.0,98.76.54.32
ALLOWED_ADMIN_IPS=

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Article Sink Configuration (optional)
ARTICLE_SINK_PATH=./data/articles.jsonl

